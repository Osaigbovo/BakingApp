<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_child"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#EEEEEE">

        <TextView
            android:id="@+id/text_child_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_child_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/text_child_ingredient"
            app:layout_constraintTop_toTopOf="@+id/text_child_ingredient" />

        <TextView
            android:id="@+id/text_child_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/text_child_quantity"
            app:layout_constraintTop_toTopOf="@+id/text_child_quantity" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>